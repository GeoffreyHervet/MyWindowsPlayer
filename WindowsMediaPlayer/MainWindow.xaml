<Window x:Class="WindowsMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wm="clr-namespace:WindowsMediaPlayer"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <wm:ModelPlayer />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*" />
            <RowDefinition Height="150*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        
        <Button Command="{Binding PlayFile}" Height="50" Width="50" Name="LectureButton" HorizontalAlignment="Center" 
                Margin="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Content="{Binding LectureContent}" />

        <Button Command="{Binding StopFile}" Height="50" Width="50" Name="Stop" HorizontalAlignment="Center" 
                Margin="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2">Stop</Button>
        
        <Button Command="{Binding FindRessource}" Height="25" Width="80" Name="Parcourir" HorizontalAlignment="Center"
                Margin="43,0,43,12" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1">Parcourir</Button>

        <Slider Name="Volume" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" ValueChanged="ValueSound" />

    </Grid>
</Window>
