<Window x:Class="WindowsMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wm="clr-namespace:WindowsMediaPlayer"
        Title="MainWindow" Height="468" Width="569" MinHeight="468" MinWidth="468">
    <Window.DataContext>
        <wm:ModelPlayer />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="270*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Background="Black">
            <Viewbox>
                  <Grid>
                    <MediaElement VerticalAlignment="Center" Height="auto" Width="auto"
                        Source="{Binding mediaElement.Source}"
                        LoadedBehavior="{Binding mediaElement.LoadedBehavior}"
                        Volume="{Binding mediaElement.Volume}" />

                 </Grid>
             </Viewbox>
        </Grid>

        <Grid Grid.Row="1"  Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="32*" />
                <RowDefinition Height="11*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <Button Command="{Binding StopFile}" Name="Stop" HorizontalAlignment="Center" Margin="16,6,8,10" VerticalAlignment="Center" Height="27" Width="67" Grid.Column="1" Grid.RowSpan="2">Stop</Button>
            <Button Command="{Binding PlayFile}" Height="27" Width="67" Name="LectureButton" HorizontalAlignment="Center" Margin="14,5,10,0" VerticalAlignment="Center" Content="{Binding LectureContent}" />
            <TextBox Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtValue" Text="{Binding Mode=TwoWay, ElementName=Volume,Path=Value, UpdateSourceTrigger=PropertyChanged}" Height="28" Width="30" Margin="29,0,0,7" Grid.RowSpan="2"></TextBox>
            <Button Command="{Binding FindRessource}" Height="26" Width="67" Name="Parcourir" HorizontalAlignment="Center" Margin="18,0,6,7" VerticalAlignment="Center" Grid.RowSpan="2" Grid.Column="4">Parcourir</Button>
            <Slider Name="Volume" VerticalAlignment="Center" Value="{Binding ValueSoundContent}" SmallChange="1" Maximum="100" Margin="12,0,9,9" Grid.Column="2" Grid.RowSpan="2" />
       
        </Grid>
    </Grid>
</Window>
